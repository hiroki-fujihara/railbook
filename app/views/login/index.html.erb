<h1>Login#index</h1>
<p style="color : Red "><%= @error %></p>
<%= form_tag action: :auth do %>
  <div class="field">
    <%= label_tag :userid, 'ユーザーID' %>
    <%= text_field_tag :userid, '' %>
  </div>
  <div class="field">
    <%= label_tag :userid, 'パスワード' %>
    <%= text_field_tag :password, '' %>
  </div>
  <%#ログイン後にリダイレクトすべきアクションを隠しフィールドにセット %>
  <%= hidden_field_tag :referer, flash[:referer] %>
  <%= submit_tag 'ログイン' %>
<% end %>
<%= link_to 'ユーザー登録', users_path %>

